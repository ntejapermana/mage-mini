<?xml version="1.0" encoding="UTF-8"?>

<phpunit 
    colors="true"
    convertErrorsToExceptions="true"
    convertNoticesToExceptions="true"
    convertWarningsToExceptions="true" 
    stopOnError="false"
    stopOnFailure="false"
    stopOnIncomplete="false"
    stopOnSkipped="false"
    backupGlobals="false">
    <php>
        <ini name="max_execution_time" value="0"/>
    </php>
    <testsuites>
        <testsuite name="Functional">
            <directory suffix=".php">../../app/code/local/Kaskusnetworks/Payment/Test/Functional/TestCase</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="false">
            <directory suffix=".php">../../app/code/local/Kaskusnetworks</directory>
            <exclude>
                <directory suffix=".php">../../app/code/local/Kaskusnetworks/Bridge/Test</directory>
                <directory suffix=".php">../../app/code/local/Kaskusnetworks/Bridge/sql</directory>
                <directory suffix=".php">../../app/code/local/Kaskusnetworks/CDN/Test</directory>
                <directory suffix=".php">../../app/code/local/Kaskusnetworks/Ci/Test</directory>
                <directory suffix=".php">../../app/code/local/Kaskusnetworks/Ci/sql</directory>
                <directory suffix=".php">../../app/code/local/Kaskusnetworks/Fjb/Test</directory>
                <directory suffix=".php">../../app/code/local/Kaskusnetworks/Fjb/sql</directory>
                <directory suffix=".php">../../app/code/local/Kaskusnetworks/Logger/Test</directory>
                <directory suffix=".php">../../app/code/local/Kaskusnetworks/Mp/Test</directory>
                <directory suffix=".php">../../app/code/local/Kaskusnetworks/Mp/sql</directory>
                <directory suffix=".php">../../app/code/local/Kaskusnetworks/Stubs</directory>
                <directory suffix=".php">../../app/code/local/Kaskusnetworks/Seller/Test</directory>
                <directory suffix=".php">../../app/code/local/Kaskusnetworks/Seller/sql</directory>
                <directory suffix=".php">../../app/code/local/Kaskusnetworks/Shipping</directory>
                <directory suffix=".php">../../app/code/local/Kaskusnetworks/Shipping/Test</directory>
                <directory suffix=".php">../../app/code/local/Kaskusnetworks/Shipping/sql</directory>
            </exclude>
        </whitelist>
    </filter>
</phpunit>
